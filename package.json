{
  "name": "nfc-bracelet-fortune",
  "version": "1.0.0",
  "description": "专属NFC手链运势微信小程序",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter wx-app dev:mp-weixin\" \"pnpm --filter api start:dev\"",
    "dev:wx": "pnpm --filter wx-app dev:mp-weixin",
    "dev:api": "pnpm --filter api start:dev",
    "build": "pnpm --filter wx-app build:mp-weixin && pnpm --filter api build",
    "build:wx": "pnpm --filter wx-app build:mp-weixin",
    "build:api": "pnpm --filter api build",
    "lint": "eslint . --ext .ts,.vue,.js",
    "lint:fix": "eslint . --ext .ts,.vue,.js --fix",
    "format": "prettier --write .",
    "test": "pnpm --filter wx-app test:unit && pnpm --filter api test",
    "test:wx": "pnpm --filter wx-app test:unit",
    "test:api": "pnpm --filter api test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-plugin-vue": "^9.15.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
